<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Planner Hub</title>
    <link rel="stylesheet" href="~/css/home.css">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>
<body>
    <!-- ============ Container ============ -->
    <div class="container">

        <!-- ============ Navigation ============ -->
        <nav class="navigation">
            <ul>
                <!-- Logo -->
                <li class="logo">
                    <a href="@Url.Action("Index", "Home")">
                        <span class="icon">
                            <ion-icon name="logo-apple"></ion-icon>
                        </span>
                        <span class="title">Student Planner Hub</span>
                    </a>
                </li>

                <!-- Navigation Links -->
                <li>
                    <a href="@Url.Action("Index", "Calendaries")">
                        <span class="icon"><ion-icon name="calendar-outline"></ion-icon></span>
                        <span class="title">Calendario</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Diaries")">
                        <span class="icon"><ion-icon name="book-outline"></ion-icon></span>
                        <span class="title">Agenda</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Organizers")">
                        <span class="icon"><ion-icon name="clipboard-outline"></ion-icon></span>
                        <span class="title">Organizador</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Messengers")">
                        <span class="icon"><ion-icon name="chatbubble-outline"></ion-icon></span>
                        <span class="title">Mensajería</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Themes")">
                        <span class="icon"><ion-icon name="brush-outline"></ion-icon></span>
                        <span class="title">Personalizar Tema</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Details", "Users")">
                        <span class="icon"><ion-icon name="settings-outline"></ion-icon></span>
                        <span class="title">Configurar</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("LogOut", "Home")">
                        <span class="icon"><ion-icon name="log-out-outline"></ion-icon></span>
                        <span class="title">Cerrar Sesión</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- ============ Main Content ============ -->
        <div class="main">
            <!-- Topbar -->
            <div class="topbar">
                <!-- Toggle Button -->
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>
            </div>

            <!-- ======================= Contenido Principal ================== -->
            <div class="contenthome" id="contenthome">
                <h1 class="display-4 mb-4">STUDENT PLANNER HUB</h1>
                <h2 class="display-3 mb-3">Bienvenido, @ViewData["nombreUsuario"]</h2>
                <p>ID de usuario: @ViewData["UserId"]</p>
                <div class="welcome-description">
                    <p>Bienvenido a Student Planner Hub, donde puedes:</p>
                    <ul>
                        <li>Crear notas y eventos</li>
                        <li>Administrar tareas y actividades</li>
                        <li>Chatear con otros usuarios</li>
                        <li>Modificar tu perfil</li>
                        <li>y mucho más...</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>


    <script>
        const toggle = document.querySelector('.toggle');
        const navigation = document.querySelector('.navigation');
        const main = document.querySelector('.main');

        toggle.onclick = function () {
            navigation.classList.toggle('active');
            main.classList.toggle('active');
        };
    </script>
</body>
</html>
