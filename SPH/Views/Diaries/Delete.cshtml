@model SPH.Models.Diary

@{
    ViewData["Title"] = "Eliminar Nota";
}

<h2>Eliminar Nota</h2>

<h4>Diary</h4>
<hr />
<div>
    <h4>¿Está seguro que desea eliminar esta nota?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreNota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreNota)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
