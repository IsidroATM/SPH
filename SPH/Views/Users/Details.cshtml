@model SPH.Models.User

<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"> <!-- Font Awesome para íconos -->
    <link rel="stylesheet" href="~/css/configuracion.css">
</head>

<!-- ============ Container ============ -->
<div class="container">

    <!-- ============ Navigation ============ -->
    <nav class="navigation">
        <ul>
            <!-- Logo -->
            <li class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <span class="icon">
                        <ion-icon name="logo-apple"></ion-icon>
                    </span>
                    <span class="title">Student Planner Hub</span>
                </a>
            </li>

            <!-- Navigation Links -->
            <li>
                <a href="@Url.Action("Index","Home")">
                    <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                    <span class="title">Inicio</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Calendaries")">
                    <span class="icon"><ion-icon name="calendar-outline"></ion-icon></span>
                    <span class="title">Calendario</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Diaries")">
                    <span class="icon"><ion-icon name="book-outline"></ion-icon></span>
                    <span class="title">Agenda</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Organizers")">
                    <span class="icon"><ion-icon name="clipboard-outline"></ion-icon></span>
                    <span class="title">Organizador</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Messengers")">
                    <span class="icon"><ion-icon name="chatbubble-outline"></ion-icon></span>
                    <span class="title">Mensajería</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Themes")">
                    <span class="icon"><ion-icon name="brush-outline"></ion-icon></span>
                    <span class="title">Personalizar Tema</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Details", "Users")">
                    <span class="icon"><ion-icon name="settings-outline"></ion-icon></span>
                    <span class="title">Configurar</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("LogOut", "Home")">
                    <span class="icon"><ion-icon name="log-out-outline"></ion-icon></span>
                    <span class="title">Cerrar Sesión</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- ============ Main Content ============ -->
    <div class="main">
        <!-- Topbar -->
        <div class="topbar">
            <!-- Toggle Button -->
            <div class="toggle">
                <ion-icon name="menu-outline"></ion-icon>
            </div>
        </div>

        <!-- ======================= Contenido Principal ================== -->
        <div class="content" id="content">
            <h2 class="mb-4">Detalles de Usuario</h2>
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h4 class="card-title">Nombre:</h4>
                            <p class="card-text">@Model.Nombre</p>
                        </div>
                        <div class="col-md-6">
                            <h4 class="card-title">NickName:</h4>
                            <p class="card-text">@Model.NickName</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h4 class="card-title">Edad:</h4>
                            <p class="card-text">@Model.Edad</p>
                        </div>
                        <div class="col-md-6">
                            <h4 class="card-title">Correo:</h4>
                            <p class="card-text">@Model.Correo</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h4 class="card-title">Fecha de Nacimiento:</h4>
                            <p class="card-text">@Model.FechaNacimiento.ToShortDateString()</p>
                        </div>
                        <div class="col-md-6">
                            <h4 class="card-title">Imagen de Perfil:</h4>
                            <p class="card-text">@Model.ImagenPerfil</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h4 class="card-title">Biografía:</h4>
                            <p class="card-text">@Model.Biografia</p>
                        </div>
                        <div class="col-md-6">
                            <h4 class="card-title">Número de Contacto:</h4>
                            <p class="card-text">@Model.NumeroContacto</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h4 class="card-title">Ubicación:</h4>
                            <p class="card-text">@Model.Ubicacion</p>
                        </div>
                        <div class="col-md-6">
                            <h4 class="card-title">Rol:</h4>
                            <p class="card-text">@Model.Rol</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h4 class="card-title">Estado:</h4>
                            <p class="card-text">@Model.Estado</p>
                        </div>
                        <div class="col-md-6">
                            <h4 class="card-title">Organización:</h4>
                            <p class="card-text">@Model.Organizacion</p>
                        </div>
                    </div>
                </div>
            </div>
            <p class="mt-4">
                <a asp-action="Edit" asp-controller="Users" class="btn btn-primary">Editar</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="~/js/sidebar.js"></script>


    <script>
        const toggle = document.querySelector('.toggle');
        const navigation = document.querySelector('.navigation');
        const main = document.querySelector('.main');

        toggle.onclick = function () {
            navigation.classList.toggle('active');
            main.classList.toggle('active');
        };
    </script>
}