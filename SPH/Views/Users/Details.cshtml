@model SPH.Models.User

<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"> <!-- Font Awesome para íconos -->
    <link rel="stylesheet" href="~/css/st.css">
    <link rel="stylesheet" href="~/css/styles_user_detail.css">
</head>

<div class="sidebar" id="sidebar">
    <a href="@Url.Action("Index", "Home")">
        <img src="~/images/logo.png" alt="Logo" class="mb-4">        
    </a>
    <p class="text-center">ID de usuario: @ViewData["UserId"]</p>
    <a href="@Url.Action("Index", "Calendaries")" class="btn btn-light btn-lg btn-block mb-3"><i class="fas fa-calendar-alt mr-2"></i> Calendario</a>
    <a href="@Url.Action("Index", "Diaries")" class="btn btn-light btn-lg btn-block mb-3"><i class="fas fa-book mr-2"></i> Agenda</a>
    <a href="@Url.Action("Index", "Organizers")" class="btn btn-light btn-lg btn-block mb-3"><i class="fas fa-tasks mr-2"></i> Organizador</a>
    <a href="@Url.Action("Index", "Messengers")" class="btn btn-light btn-lg btn-block mb-3"><i class="fas fa-comments mr-2"></i> Mensajería</a>
    <a href="@Url.Action("Index", "Themes")" class="btn btn-light btn-lg btn-block mb-3"><i class="fas fa-paint-brush mr-2"></i> Personalizar Tema</a>
    <a href="@Url.Action("Details", "Users")" class="btn btn-light btn-lg btn-block mb-3"><i class="fas fa-cog mr-2"></i> Configurar</a>
</div>


<div class="content" id="content">
    <button class="open-btn btn btn-secondary" onclick="toggleSidebar()">&#9776;</button>
    <h2 class="mb-4">Detalles de Usuario</h2>
    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Nombre:</h4>
                    <p class="card-text">@Model.Nombre</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">NickName:</h4>
                    <p class="card-text">@Model.NickName</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Edad:</h4>
                    <p class="card-text">@Model.Edad</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Correo:</h4>
                    <p class="card-text">@Model.Correo</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Fecha de Nacimiento:</h4>
                    <p class="card-text">@Model.FechaNacimiento.ToShortDateString()</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Imagen de Perfil:</h4>
                    <p class="card-text">@Model.ImagenPerfil</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Biografía:</h4>
                    <p class="card-text">@Model.Biografia</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Número de Contacto:</h4>
                    <p class="card-text">@Model.NumeroContacto</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Ubicación:</h4>
                    <p class="card-text">@Model.Ubicacion</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Rol:</h4>
                    <p class="card-text">@Model.Rol</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Estado:</h4>
                    <p class="card-text">@Model.Estado</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Organización:</h4>
                    <p class="card-text">@Model.Organizacion</p>
                </div>
            </div>
        </div>
    </div>
    <p class="mt-4">
        <a asp-action="Edit" asp-controller="Users" class="btn btn-primary">Editar</a>
    </p>
</div>

@section Scripts {
    <script src="~/js/sidebar.js"></script>
}
