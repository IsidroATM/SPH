@model SPH.Models.User

<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"> <!-- Font Awesome para íconos -->
    <link rel="stylesheet" href="~/css/home.css">
</head>

<!-- =============== Navigation (Sidebar con enlaces del primer HTML) ================ -->
<div class="container">
    <div class="navigation">
        <ul>
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <span class="icon">
                        <ion-icon name="logo-apple"></ion-icon>
                    </span>
                    <span class="title">Student Planner Hub</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Calendaries")">
                    <span class="icon">
                        <i class="fas fa-calendar-alt"></i>
                    </span>
                    <span class="title">Calendario</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Diaries")">
                    <span class="icon">
                        <i class="fas fa-book"></i>
                    </span>
                    <span class="title">Agenda</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Organizers")">
                    <span class="icon">
                        <i class="fas fa-tasks"></i>
                    </span>
                    <span class="title">Organizador</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Messengers")">
                    <span class="icon">
                        <i class="fas fa-comments"></i>
                    </span>
                    <span class="title">Mensajería</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Themes")">
                    <span class="icon">
                        <i class="fas fa-paint-brush"></i>
                    </span>
                    <span class="title">Personalizar Tema</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Details", "Users")">
                    <span class="icon">
                        <i class="fas fa-cog"></i>
                    </span>
                    <span class="title">Configurar</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("LogOut", "Home")">
                    <span class="icon">
                        <ion-icon name="log-out-outline"></ion-icon>
                    </span>
                    <span class="title">Cerrar Sesión</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- ========================= Main ==================== -->
    <div class="main">
        <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
        </div>
    </div>
</div>


<div class="content" id="content">
    <button class="open-btn btn btn-secondary" onclick="toggleSidebar()">&#9776;</button>
    <h2 class="mb-4">Detalles de Usuario</h2>
    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Nombre:</h4>
                    <p class="card-text">@Model.Nombre</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">NickName:</h4>
                    <p class="card-text">@Model.NickName</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Edad:</h4>
                    <p class="card-text">@Model.Edad</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Correo:</h4>
                    <p class="card-text">@Model.Correo</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Fecha de Nacimiento:</h4>
                    <p class="card-text">@Model.FechaNacimiento.ToShortDateString()</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Imagen de Perfil:</h4>
                    <p class="card-text">@Model.ImagenPerfil</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Biografía:</h4>
                    <p class="card-text">@Model.Biografia</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Número de Contacto:</h4>
                    <p class="card-text">@Model.NumeroContacto</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Ubicación:</h4>
                    <p class="card-text">@Model.Ubicacion</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Rol:</h4>
                    <p class="card-text">@Model.Rol</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="card-title">Estado:</h4>
                    <p class="card-text">@Model.Estado</p>
                </div>
                <div class="col-md-6">
                    <h4 class="card-title">Organización:</h4>
                    <p class="card-text">@Model.Organizacion</p>
                </div>
            </div>
        </div>
    </div>
    <p class="mt-4">
        <a asp-action="Edit" asp-controller="Users" class="btn btn-primary">Editar</a>
    </p>
</div>

@section Scripts {
    <script src="~/js/sidebar.js"></script>
}
