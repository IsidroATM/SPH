@model IEnumerable<SPH.Models.Theme>

@{
    ViewData["Title"] = "Personalizar Tema";
}

<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"> <!-- Font Awesome para íconos -->
    <link rel="stylesheet" href="~/css/Temas.css">
</head>

<!-- =============== Navigation (Sidebar con enlaces del primer HTML) ================ -->
<div class="container">
    <div class="navigation">
        <ul>
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <span class="icon">
                        <ion-icon name="logo-apple"></ion-icon>
                    </span>
                    <span class="title">Student Planner Hub</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Calendaries")">
                    <span class="icon">
                        <i class="fas fa-calendar-alt"></i>
                    </span>
                    <span class="title">Calendario</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Diaries")">
                    <span class="icon">
                        <i class="fas fa-book"></i>
                    </span>
                    <span class="title">Agenda</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Organizers")">
                    <span class="icon">
                        <i class="fas fa-tasks"></i>
                    </span>
                    <span class="title">Organizador</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Messengers")">
                    <span class="icon">
                        <i class="fas fa-comments"></i>
                    </span>
                    <span class="title">Mensajería</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "Themes")">
                    <span class="icon">
                        <i class="fas fa-paint-brush"></i>
                    </span>
                    <span class="title">Personalizar Tema</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Details", "Users")">
                    <span class="icon">
                        <i class="fas fa-cog"></i>
                    </span>
                    <span class="title">Configurar</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("LogOut", "Home")">
                    <span class="icon">
                        <ion-icon name="log-out-outline"></ion-icon>
                    </span>
                    <span class="title">Cerrar Sesión</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- ========================= Main ==================== -->
    <div class="main">
        <!-- Topbar (barra superior del segundo HTML con búsqueda y perfil) -->
        <div class="topbar">
            <div class="toggle">
                <ion-icon name="menu-outline"></ion-icon>
            </div>

            <div class="user">
                <img src="~/images/user.png" alt="Usuario">
            </div>
        </div>
    </div>
</div>
<div class="content" id="content">
    <h2>Personalizador</h2>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Crear Nuevo Tema</a>
    </p>
    <button class="open-btn" onclick="toggleSidebar()">&#9776;</button>


    @foreach (var theme in Model)
    {
        <div>
            <h3>@theme.Name</h3>
            <p>Color: @theme.Color | Tipo de Fuente: @theme.FontType | Tamaño de Fuente: @theme.FontSize</p>
            <button class="btn btn-primary apply-theme" data-theme-id="@theme.ThemeId" asp-action="ApplyTheme" asp-route-id="@theme.ThemeId">Aplicar Tema</button>
        </div>
    }

</div>

@section Scripts {
    <script src="~/js/sidebar.js"></script>
    <script>
        $(document).ready(function () {
            $('.apply-theme').click(function () {
                var themeId = $(this).data('theme-id');
                $.post('@Url.Action("ApplyTheme", "Themes")', { id: themeId }, function (data) {
                    if (data.success) {
                        reloadStyles();
                    } else {
                        alert('Error al aplicar el tema: ' + data.message);
                    }
                });
            });
        });

        function reloadStyles() {
            var styleLink = document.getElementById('theme-style');
            if (styleLink) {
                var href = styleLink.href;
                styleLink.href = href.split('?')[0] + '?v=' + new Date().getTime();
            }
        }
    </script>
}